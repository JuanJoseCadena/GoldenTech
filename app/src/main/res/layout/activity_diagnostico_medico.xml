<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Diagnostico_medico">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:background="#2982f1"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="45dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Menú"
                android:onClick="startMainActivity"
                app:srcCompat="@mipmap/menu" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="Noticias"
                android:onClick="startNewsActivity"
                app:srcCompat="@mipmap/newspaper" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginBottom="25dp"
                android:contentDescription="Contactos"
                android:onClick="startContactActivity"
                app:srcCompat="@mipmap/phone" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="Especialistas Médicos"
                android:onClick="startMedicosActivity"
                app:srcCompat="@mipmap/botiquin" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginBottom="25dp"
                android:contentDescription="Actividades Lúdicas"
                android:onClick="startLudicasActivity"
                app:srcCompat="@mipmap/cubes" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="Diagnóstico Médico"
                android:onClick="startDiagnosticoActivity"
                app:srcCompat="@mipmap/stethoscope" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:background="#f0f0f0"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        tools:layout_editor_absoluteY="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:gravity="center_horizontal"
                    android:lineHeight="40dp"
                    android:text="DIAGNÓSTICO MÉDICO"
                    android:textColor="@color/black"
                    android:textSize="36sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="40dp"
                    android:gravity="center_horizontal"
                    android:text="Rellene los campos\ncon los datos de\nsus signos vitales"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:lineHeight="32dp"
                    android:fontFamily="@font/open_sans_light" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="Presión Arterial\nSistólica"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:lineHeight="32dp"
                    android:fontFamily="@font/open_sans_semi_bold" />

                <EditText
                    android:id="@+id/sistolica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="40dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:lineHeight="32dp"
                    android:inputType="numberPassword"
                    android:fontFamily="@font/open_sans_light" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="Presión Arterial\nDiastólica"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:lineHeight="32dp"
                    android:fontFamily="@font/open_sans_semi_bold" />

                <EditText
                    android:id="@+id/diastolica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="40dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:lineHeight="32dp"
                    android:inputType="numberPassword"
                    android:fontFamily="@font/open_sans_light" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="Temperatura\nCorporal"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:lineHeight="32dp"
                    android:fontFamily="@font/open_sans_semi_bold" />

                <EditText
                    android:id="@+id/temperatura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="40dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:lineHeight="32dp"
                    android:inputType="numberPassword"
                    android:fontFamily="@font/open_sans_light" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="Frecuencia Respiratoria"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:lineHeight="32dp"
                    android:fontFamily="@font/open_sans_semi_bold" />

                <EditText
                    android:id="@+id/oxigenacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="40dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:lineHeight="32dp"
                    android:inputType="numberPassword"
                    android:fontFamily="@font/open_sans_light" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="Frecuencia Cardiaca"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:lineHeight="32dp"
                    android:fontFamily="@font/open_sans_semi_bold" />

                <EditText
                    android:id="@+id/cardiaca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="40dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:lineHeight="32dp"
                    android:inputType="numberPassword"
                    android:fontFamily="@font/open_sans_light" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="Diagnóstico"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:lineHeight="32dp"
                    android:fontFamily="@font/open_sans_semi_bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55px"
                    android:layout_marginTop="30px"
                    android:layout_marginRight="55px"
                    android:layout_marginBottom="15px"
                    app:cardBackgroundColor="#FFE6A1"
                    app:cardCornerRadius="20px"
                    android:elevation="10dp" >

                    <TextView
                        android:id="@+id/diagnostico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="14px"
                        android:layout_marginRight="14px"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:lineHeight="32dp"
                        android:fontFamily="@font/open_sans_light" />

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/diagnosisbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="40dp"
                    android:paddingVertical="10dp"
                    android:gravity="center_horizontal"
                    app:backgroundTint="#2982f1"
                    android:text="Obtener Diagnóstico"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:lineHeight="32dp"
                    android:fontFamily="@font/open_sans_semi_bold" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>